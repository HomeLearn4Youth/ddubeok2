<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.homelearn.back.like.LikeMapper">
    <resultMap id="likeOutput" type="com.homelearn.back.like.dto.LikeOutPutForm">
        <result column="id" property="id"></result>
        <result column="user_id" property="userId"></result>
        <result column="houseinfo_id" property="aptCode"></result>
        <result column="apartmentName" property="apartmentName"></result>
        <result column="dong" property="dong"></result>
        <result column="lng" property="lng"></result>
        <result column="lat" property="lat"></result>
    </resultMap>
    <insert id="addLike" parameterType="LikeInputForm">
        insert into likes(user_id, houseinfo_id)
        values (${userId}, ${aptCode})
    </insert>
    <select id="findLikeListByUserId" parameterType="Long" resultMap="likeOutput">
        select l.id, l.user_id, l.houseinfo_id, h.apartmentName, h.dong, h.lng, h.lat
        from likes l join houseinfo h on l.houseinfo_id = h.aptCode
        where l.user_id = ${userId}
    </select>
    <delete id="deleteLike" parameterType="LikeInputForm">
        delete
        from likes
        where user_id = ${userId} and houseinfo_id = ${aptCode};
    </delete>




</mapper>